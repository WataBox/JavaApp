<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/quizexplainLayout1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/quizexplainLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_weight="1">

        <TextView
            android:id="@+id/Name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="50sp"
            app:layout_constraintTop_toBottomOf="@id/config_but"
            app:layout_constraintStart_toStartOf="@id/quizexplainLayout1"
            app:layout_constraintEnd_toEndOf="@id/quizexplainLayout1" />

        <Button
            android:id="@+id/config_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="設定"
            app:layout_constraintTop_toTopOf="@id/quizexplainLayout1"
            app:layout_constraintEnd_toEndOf="@id/quizexplainLayout1"/>

        <Button
            android:id="@+id/toExplanation_but"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="問題説明"
            app:layout_constraintTop_toBottomOf="@id/config_but"
            app:layout_constraintEnd_toEndOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/quizexplainLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/quizexplainLayout1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_weight="5">

        <Button
            android:id="@+id/quiz1_but"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="50dp"
            android:text="サンプルクイズ"
            android:textSize="30sp"
            app:layout_constraintTop_toTopOf="@id/quizexplainLayout2"
            app:layout_constraintBottom_toTopOf="@id/quiz2_but"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/quiz2_but"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="50dp"
            android:text="四則演算クイズ"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@id/quiz1_but"
            app:layout_constraintBottom_toTopOf="@id/quiz3_but"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/quiz3_but"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="50dp"
            android:text="四字熟語クイズ"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@id/quiz2_but"
            app:layout_constraintBottom_toTopOf="@id/start_but"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/start_but"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="50dp"
            android:text="START"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/quiz3_but"
            app:layout_constraintBottom_toBottomOf="@id/quizexplainLayout2" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>